<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">

	<display-name>sdi2-23</display-name>


	<!-- ================================================ -->
	<!-- === Par치metros del contexto de la aplicaci칩n === -->
	<!-- ================================================ -->

	<context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Development</param-value>
	</context-param>

	<context-param>
		<param-name>javax.faces.DATETIMECONVERTER_DEFAULT_TIMEZONE_IS_SYSTEM_TIMEZONE</param-name>
		<param-value>true</param-value>
	</context-param>

	<context-param>
		<param-name>primefaces.THEME</param-name>
		<param-value>cupertino</param-value>
	</context-param>

	<context-param>
		<param-name>logLevel</param-name>
		<param-value>DEBUG</param-value>
	</context-param>


	<!-- ================= -->
	<!-- === Listeners === -->
	<!-- ================= -->

	<listener>
		<listener-class>uo.sdi.listener.LoggingInitialization</listener-class>
	</listener>


	<!-- ================ -->
	<!-- === Servlets === -->
	<!-- ================ -->

	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>


	<!-- ================ -->
	<!-- === Mappings === -->
	<!-- ================ -->

	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.xhtml</url-pattern>
	</servlet-mapping>


	<!-- ======================== -->
	<!-- === P치gina de inicio === -->
	<!-- ======================== -->

	<welcome-file-list>
		<welcome-file>pages_no_user/login.xhtml</welcome-file>
	</welcome-file-list>


	<!-- ======================= -->
	<!-- === P치gina de error === -->
	<!-- ======================= -->

	<error-page>
		<location>/pages_other/error.xhtml</location>
	</error-page>

</web-app>