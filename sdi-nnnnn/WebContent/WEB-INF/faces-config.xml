<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<!-- ==================================== -->
	<!-- ===== Declaración de variables ===== -->
	<!-- ==================================== -->

	<application>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>


	<!-- =================== -->
	<!-- ====== Beans ====== -->
	<!-- =================== -->

	<managed-bean>
		<managed-bean-name>bean_login</managed-bean-name>
		<managed-bean-class>uo.sdi.presentation.user.BeanLogin</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>bean_language_config</managed-bean-name>
		<managed-bean-class>uo.sdi.presentation.user.BeanLanguage</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>bean_users_list</managed-bean-name>
		<managed-bean-class>uo.sdi.presentation.admin.BeanUsersList</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>bean_database_management</managed-bean-name>
		<managed-bean-class>uo.sdi.presentation.admin.BeanDatabaseManagement</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>


	<!-- ============================ -->
	<!-- === Reglas de navegación === -->
	<!-- ============================ -->

	<!-- - - - - - - - -->
	<!-- - - Error - - -->
	<!-- - - - - - - - -->

	<navigation-rule>
		<from-view-id>*</from-view-id>

		<navigation-case>
			<from-outcome>error</from-outcome>
			<to-view-id>/error.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<navigation-rule>
		<from-view-id>/error.xhtml</from-view-id>

		<navigation-case>
			<from-outcome>volver</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>


	<!-- - - - - - - - -->
	<!-- - - Login - - -->
	<!-- - - - - - - - -->

	<navigation-rule>
		<from-view-id>/login.xhtml</from-view-id>

		<navigation-case>
			<from-action>#{bean_login.dologin}</from-action>
			<from-outcome>fallo</from-outcome>
			<to-view-id>/login.xhtml</to-view-id>
		</navigation-case>

		<navigation-case>
			<from-action>#{bean_login.dologin}</from-action>
			<from-outcome>admin</from-outcome>
			<to-view-id>/principal_administrador.xhtml</to-view-id>
		</navigation-case>

		<navigation-case>
			<from-action>#{bean_login.dologin}</from-action>
			<from-outcome>usuario</from-outcome>
			<to-view-id>/principal_usuario.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>