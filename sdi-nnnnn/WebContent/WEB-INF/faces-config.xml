<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd"
	version="2.2">

	<!-- ==================================== -->
	<!-- ===== Declaración de variables ===== -->
	<!-- ==================================== -->

	<application>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>


	<!-- =================== -->
	<!-- ====== Beans ====== -->
	<!-- =================== -->

	<managed-bean>
		<managed-bean-name>beanLogin</managed-bean-name>
		<managed-bean-class>uo.sdi.presentation.user.BeanLogin</managed-bean-class>
		<managed-bean-scope>request</managed-bean-scope>
	</managed-bean>
	
	<managed-bean>
		<managed-bean-name>config_idioma</managed-bean-name>
		<managed-bean-class>uo.sdi.presentation.user.BeanSettings</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>


	<!-- ============================ -->
	<!-- === Reglas de navegación === -->
	<!-- ============================ -->

	<!-- - - - - - - - - - - - - - - - - - - -->
	<!-- - - Cambiar datos (alta, editar) - - -->
	<!-- - - - - - - - - - - - - - - - - - - -->

</faces-config>